<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.flunkystats">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup"
        android:hardwareAccelerated="true">
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"/>
        <activity
            android:name=".activities.MatchStatsActivity"
            android:label="Spiel Stats" />
        <activity
            android:name=".activities.MatchesListActivity"
            android:label="Spiel Liste" />
        <activity
            android:name=".activities.RankingsActivity"
            android:label="@string/title_activity_rankings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PlayerListActivity"
            android:label="Spieler Liste" />
        <activity
            android:name=".activities.PlayerStatsActivity"
            android:label="Spieler Stats" />
        <activity
            android:name=".activities.TeamStatsActivity"
            android:label="Team Stats" />
        <activity
            android:name=".activities.TeamListActivity"
            android:label="Team Liste" />
        <activity android:name=".activities.TournTreeActivity"
            android:label="Turnierbaum" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>